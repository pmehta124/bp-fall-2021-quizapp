<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Quiz App"
            android:layout_width="60dp"
            android:layout_height="26dp" android:id="@+id/textView"
            android:scaleX="5" android:scaleY="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:translationY="-30"
            android:layout_marginEnd="176dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="175dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:scaleX="2" android:scaleY="2" android:translationY="10"
            android:layout_marginTop="-20dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="175dp"
            android:layout_marginEnd="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/namePrompt"
            app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="362dp"
            android:layout_height="48dp"
            android:hint="Please enter your name"
            android:id="@+id/namePrompt"
            android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="BLAST OFF!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:scaleX="2" android:scaleY="2" android:background="#9C27B0"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" style="border"
            app:layout_constraintTop_toBottomOf="@+id/namePrompt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="155dp"
            android:layout_marginEnd="168dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="313dp"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="142dp"
            android:layout_height="123dp" app:srcCompat="@drawable/transparent_quiz_app_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="134dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp" android:layout_marginEnd="135dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>

</androidx.constraintlayout.widget.ConstraintLayout>